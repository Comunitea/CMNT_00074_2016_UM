<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_picking_type_form_log_partner" model="ir.ui.view" >
            <field name="name">view.picking.type.form.log.partner</field>
            <field name="model">stock.picking.type</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">

                    <field name="partner_id" attrs="{'invisible':[('code','!=','logistic')]}"/>
                </xpath>
            </field>
        </record>
         <record id="view_picking_form_log_ops" model="ir.ui.view" >
            <field name="name">view.picking.form.log.ops</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="picking_type_code" invisible="1"/>
                    <field name="sanmy_order" attrs="{'invisible':[('picking_type_code','!=','logistic')]}"/>
                    <field name="sanmy_pick" attrs="{'invisible':[('picking_type_code','!=','logistic')]}"/>
                    <field name="umai_order" attrs="{'invisible':[('picking_type_code','!=','logistic')]}"/>
                </xpath>
            </field>
        </record>

sale.view_order_form
    </data>
</openerp>

