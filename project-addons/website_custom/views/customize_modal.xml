<openerp>
    <data>

        <template id="option_pattern_pattern_bamboo" name="option_pattern_pattern_bamboo" inherit_id="theme_louma.styles_compiled" active="False" customize_show="False">
            <xpath expr="." position="inside">
                <link href="/website_custom/static/src/css/patterns/bamboo.css" rel="stylesheet" type="text/css" />
            </xpath>
        </template>

        <template id="option_color_blue_UM" name="option_color_blue_UM" inherit_id="theme_louma.styles_compiled" active="False" customize_show="False">
            <xpath expr="." position="inside">
                <link href="/website_custom/static/src/css/color_scheme/blue_UM.css" rel="stylesheet" type="text/css" />
            </xpath>
        </template>

        <template id="customize_modal_box_add_bamboo" inherit_id="theme_louma.customize_modal">
            <xpath expr="//table[@name='pattern']/tr[1]" position="inside">
                <td>
                    <label>
                        <img src="/website_custom/static/src/images/patterns/pattern_bamboo.jpg" style="width: 30px;height: 30px" alt="bamboo" />
                        <input name="pattern" type="radio" data-xmlid="website_custom.option_pattern_pattern_bamboo"/>
                    </label>
                </td>
            </xpath>
            <xpath expr="//table[@name='color']/tr[1]" position="inside">
                <td>
                    <label>
                        <img src="/website_custom/static/src/images/theme/blue_UM.png" style="width: 30px;height: 30px" alt="Blue" />
                        <input name="colorvar" type="radio" data-xmlid="website_custom.option_color_blue_UM"/>
                    </label>
                </td>
            </xpath>
        </template>
    </data>
</openerp>
